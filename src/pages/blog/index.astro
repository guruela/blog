---
import Layout from '../../layouts/Layout.astro';

const posts = Object.values(import.meta.glob('./*.md', { eager: true }));
---

<Layout title="Blog | Gurucharan Shivakumar">
	<div class="max-w-3xl mx-auto space-y-10">
		<div class="text-center">
			<h1 class="text-3xl font-extrabold text-slate-900 dark:text-slate-100 sm:text-4xl transition-colors duration-300">Blog</h1>
			<p class="mt-3 max-w-2xl mx-auto text-xl text-slate-500 dark:text-slate-400 sm:mt-4 transition-colors duration-300">
				Thoughts, tutorials, and insights.
			</p>
		</div>
		
		<div class="space-y-8">
			{posts.map((post) => (
				<article class="relative flex flex-col bg-white dark:bg-slate-800/50 p-6 rounded-lg shadow-sm border border-purple-100 dark:border-purple-900/30 hover:shadow-md transition-all duration-300">
					<div class="flex-1">
                        <div class="flex items-center text-sm text-slate-500 dark:text-slate-400 mb-2 transition-colors">
                             <time datetime={post.frontmatter.date}>{post.frontmatter.date}</time>
                        </div>
						<h3 class="text-xl font-semibold text-slate-900 dark:text-slate-100 transition-colors">
							<a href={post.url} class="focus:outline-none">
								<span class="absolute inset-0" aria-hidden="true"></span>
								{post.frontmatter.title}
							</a>
						</h3>
						<p class="mt-3 text-base text-slate-600 dark:text-slate-300 transition-colors">
							{post.frontmatter.description}
						</p>
					</div>
                    <div class="mt-4 flex items-center">
                        <span class="text-purple-600 dark:text-purple-400 font-medium hover:text-purple-500 dark:hover:text-purple-300 transition-colors">Read article &rarr;</span>
                    </div>
				</article>
			))}
		</div>
	</div>
</Layout>
