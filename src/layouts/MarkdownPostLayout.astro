---
import Layout from './Layout.astro';
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
    <div class="max-w-3xl mx-auto py-8">
        <div class="mb-6">
            <h1 class="text-3xl font-extrabold text-slate-900 dark:text-slate-100 sm:text-4xl transition-colors duration-300">{frontmatter.title}</h1>
            <div class="flex items-center space-x-2 text-sm text-slate-500 dark:text-slate-400 mt-2">
                 <time datetime={frontmatter.date}>{new Date(frontmatter.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
                 <span>â€¢</span>
                 <span>{frontmatter.author || "Gurucharan Shivakumar"}</span>
            </div>
        </div>
        
        <div class="bg-white dark:bg-slate-800/50 shadow rounded-lg border border-purple-100 dark:border-purple-900/30 p-8 text-slate-700 dark:text-slate-300 leading-relaxed transition-colors duration-300 prose prose-slate dark:prose-invert max-w-none">
            <slot />
        </div>
    </div>
</Layout>
