---
import "../styles/global.css";

interface Props {
    title?: string;
    frontmatter?: {
        title: string;
        [key: string]: any;
    };
}

const { title, frontmatter } = Astro.props;
const pageTitle = title || frontmatter?.title || "Gurucharan Shivakumar";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Gurucharan Shivakumar Portfolio" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
        <script is:inline>
            const theme = (() => {
                if (
                    typeof localStorage !== "undefined" &&
                    localStorage.getItem("theme")
                ) {
                    return localStorage.getItem("theme");
                }
                if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
                    return "dark";
                }
                return "light";
            })();

            if (theme === "dark") {
                document.documentElement.classList.add("dark");
            } else {
                document.documentElement.classList.remove("dark");
            }

            window.localStorage.setItem("theme", theme);
        </script>
    </head>
    <body
        class="bg-gradient-to-br from-purple-50 via-white to-fuchsia-50 dark:from-slate-950 dark:via-purple-950 dark:to-slate-900 text-slate-900 dark:text-slate-50 min-h-screen flex flex-col font-sans transition-colors duration-300"
    >
        <header
            class="bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-purple-100 dark:border-purple-900/50 sticky top-0 z-50 shadow-sm transition-colors duration-300"
        >
            <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center h-16">
                    <!-- Left: Name -->
                    <div class="flex-shrink-0">
                        <a
                            href="/"
                            id="site-title"
                            class="group flex items-center relative text-xl font-bold text-slate-800 dark:text-slate-100 tracking-tight hover:text-purple-600 dark:hover:text-purple-400 transition-all duration-300 ease-in-out overflow-hidden min-h-[1.75rem]"
                        >
                            <span
                                id="title-dynamic"
                                class="transition-all duration-300 ease-in-out transform block"
                                >guruela</span
                            >
                        </a>
                    </div>

                    <!-- Desktop Navigation -->
                    <nav class="hidden md:flex items-center space-x-8">
                        <a
                            href="/"
                            class="text-slate-600 dark:text-slate-300 hover:text-purple-600 dark:hover:text-purple-400 font-medium transition-colors"
                            >Home</a
                        >
                        <a
                            href="/blog"
                            class="text-slate-600 dark:text-slate-300 hover:text-purple-600 dark:hover:text-purple-400 font-medium transition-colors"
                            >Blog</a
                        >
                        <a
                            href="/about"
                            class="text-slate-600 dark:text-slate-300 hover:text-purple-600 dark:hover:text-purple-400 font-medium transition-colors"
                            >About</a
                        >

                        <!-- Theme Toggle (Desktop) -->
                        <button
                            id="themeToggle"
                            class="p-2 rounded-lg bg-purple-100 dark:bg-purple-900/30 text-purple-600 dark:text-purple-300 hover:bg-purple-200 dark:hover:bg-purple-800/50 transition-colors focus:outline-none focus:ring-2 focus:ring-purple-500"
                            aria-label="Toggle Dark Mode"
                        >
                            <!-- Sun Icon -->
                            <svg
                                class="h-5 w-5 block dark:hidden"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
                                ></path>
                            </svg>
                            <!-- Moon Icon -->
                            <svg
                                class="h-5 w-5 hidden dark:block"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
                                ></path>
                            </svg>
                        </button>
                    </nav>

                    <!-- Mobile Menu Button -->
                    <div class="flex items-center md:hidden">
                        <button
                            id="mobileMenuButton"
                            class="p-2 rounded-md text-slate-600 dark:text-slate-300 hover:text-purple-600 dark:hover:text-purple-400 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-purple-500"
                            aria-controls="mobile-menu"
                            aria-expanded="false"
                        >
                            <span class="sr-only">Open main menu</span>
                            <!-- Icon when menu is closed -->
                            <svg
                                id="menuClosedIcon"
                                class="h-6 w-6 block"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M4 6h16M4 12h16M4 18h16"></path>
                            </svg>
                            <!-- Icon when menu is open -->
                            <svg
                                id="menuOpenIcon"
                                class="h-6 w-6 hidden"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Mobile Menu, show/hide based on menu state. -->
            <div
                class="md:hidden hidden bg-white dark:bg-slate-900 border-b border-purple-100 dark:border-purple-900/50"
                id="mobileMenu"
            >
                <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
                    <a
                        href="/"
                        class="block px-3 py-2 rounded-md text-base font-medium text-slate-700 dark:text-slate-300 hover:text-purple-600 dark:hover:text-purple-400 hover:bg-purple-50 dark:hover:bg-slate-800 transition-colors"
                        >Home</a
                    >
                    <a
                        href="/blog"
                        class="block px-3 py-2 rounded-md text-base font-medium text-slate-700 dark:text-slate-300 hover:text-purple-600 dark:hover:text-purple-400 hover:bg-purple-50 dark:hover:bg-slate-800 transition-colors"
                        >Blog</a
                    >
                    <a
                        href="/about"
                        class="block px-3 py-2 rounded-md text-base font-medium text-slate-700 dark:text-slate-300 hover:text-purple-600 dark:hover:text-purple-400 hover:bg-purple-50 dark:hover:bg-slate-800 transition-colors"
                        >About</a
                    >

                    <!-- Mobile Theme Toggle -->
                    <button
                        id="mobileThemeToggle"
                        class="w-full text-left px-3 py-2 rounded-md text-base font-medium text-slate-700 dark:text-slate-300 hover:text-purple-600 dark:hover:text-purple-400 hover:bg-purple-50 dark:hover:bg-slate-800 transition-colors flex items-center justify-between"
                    >
                        <span>Theme</span>
                        <!-- Sun Icon -->
                        <svg
                            class="h-5 w-5 block dark:hidden"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
                            ></path>
                        </svg>
                        <!-- Moon Icon -->
                        <svg
                            class="h-5 w-5 hidden dark:block"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
                            ></path>
                        </svg>
                    </button>
                </div>
            </div>
        </header>

        <main
            class="flex-grow w-full max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
        >
            <slot />
        </main>

        <footer
            class="bg-white/50 dark:bg-slate-900/50 backdrop-blur-sm border-t border-purple-100 dark:border-purple-900/50 mt-auto transition-colors duration-300"
        >
            <div class="max-w-6xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
                <div
                    class="flex flex-col md:flex-row justify-between items-center"
                >
                    <p class="text-slate-500 dark:text-slate-400 text-sm">
                        &copy; {new Date().getFullYear()} Gurucharan Shivakumar |
                        Made with Astro and Tailwind
                    </p>
                    <div class="flex space-x-6 mt-4 md:mt-0">
                        <a
                            href="#"
                            class="text-slate-400 hover:text-purple-500 dark:hover:text-purple-400 transition-colors"
                        >
                            <span class="sr-only">GitHub</span>
                            <!-- Heroicon name: mini/github -->
                            <svg
                                class="h-6 w-6"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                                aria-hidden="true"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </a>
                        <a
                            href="#"
                            class="text-slate-400 hover:text-purple-500 dark:hover:text-purple-400 transition-colors"
                        >
                            <span class="sr-only">LinkedIn</span>
                            <svg
                                class="h-6 w-6"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                                aria-hidden="true"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </footer>

        <script is:inline>
            // Theme Toggle Logic
            const handleToggleClick = () => {
                const element = document.documentElement;
                element.classList.toggle("dark");

                const isDark = element.classList.contains("dark");
                localStorage.setItem("theme", isDark ? "dark" : "light");
            };

            const themeToggle = document.getElementById("themeToggle");
            const mobileThemeToggle =
                document.getElementById("mobileThemeToggle");

            if (themeToggle) {
                themeToggle.addEventListener("click", handleToggleClick);
            }
            if (mobileThemeToggle) {
                mobileThemeToggle.addEventListener("click", handleToggleClick);
            }

            // Mobile Menu Logic
            const mobileMenuButton =
                document.getElementById("mobileMenuButton");
            const mobileMenu = document.getElementById("mobileMenu");
            const menuClosedIcon = document.getElementById("menuClosedIcon");
            const menuOpenIcon = document.getElementById("menuOpenIcon");

            if (
                mobileMenuButton &&
                mobileMenu &&
                menuClosedIcon &&
                menuOpenIcon
            ) {
                mobileMenuButton.addEventListener("click", () => {
                    const isExpanded =
                        mobileMenuButton.getAttribute("aria-expanded") ===
                        "true";

                    mobileMenuButton.setAttribute("aria-expanded", !isExpanded);
                    mobileMenu.classList.toggle("hidden");

                    if (!isExpanded) {
                        menuClosedIcon.classList.add("hidden");
                        menuClosedIcon.classList.remove("block");
                        menuOpenIcon.classList.add("block");
                        menuOpenIcon.classList.remove("hidden");
                    } else {
                        menuClosedIcon.classList.add("block");
                        menuClosedIcon.classList.remove("hidden");
                        menuOpenIcon.classList.add("hidden");
                        menuOpenIcon.classList.remove("block");
                    }
                });
            }

            // Title Animation Logic (Slide)
            const titles = ["Gurucharan Shivakumar", "guruela"];
            let currentIndex = 0; // Start at 0 to transition to full name first

            const titleElement = document.getElementById("title-dynamic");

            if (titleElement) {
                setInterval(() => {
                    // Slide out (up)
                    titleElement.classList.add(
                        "-translate-y-full",
                        "opacity-0",
                    );

                    setTimeout(() => {
                        // Change text
                        titleElement.textContent = titles[currentIndex];
                        currentIndex = (currentIndex + 1) % titles.length;

                        // Disable transition to reset position instantly
                        titleElement.classList.add("duration-0");
                        titleElement.classList.remove(
                            "duration-300",
                            "-translate-y-full",
                        );
                        titleElement.classList.add("translate-y-full"); // Move to bottom

                        // Force reflow
                        void titleElement.offsetWidth;

                        // Slide in (from bottom)
                        titleElement.classList.remove(
                            "duration-0",
                            "translate-y-full",
                            "opacity-0",
                        );
                        titleElement.classList.add("duration-300");
                    }, 300); // Wait for exit animation (300ms)
                }, 2500); // Cycle every 2.5 seconds
            }
        </script>
    </body>
</html>
